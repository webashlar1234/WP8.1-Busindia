                                            <TextBlock Grid.Row="5" Grid.Column="1" FontSize="20" VerticalAlignment="Center" Foreground="Red" Margin="5,20,0,0" Text="*"/>
                                            <Border Grid.Row="6" BorderThickness="1" BorderBrush="#8B8B8B" Height="40" Margin="10,0,0,10" CornerRadius="5">
                                                <TextBox x:Name="txtIDProofNo" Text="{Binding Mobile1}" VerticalAlignment="Bottom" Margin="0,0,0,5" BorderBrush="#8B8B8B" BorderThickness="0" PlaceholderText="ID Proof No" Grid.Row="0" HorizontalAlignment="Left" Width="321"></TextBox>
                                            </Border>                                           
                                        </Grid>
                                    </Border>
                                    <Border Grid.Row="4" CornerRadius="5" BorderBrush="Transparent" Background="Transparent" BorderThickness="2" VerticalAlignment="Top" Height="100">
                                        <Border x:ConnectionId='7' Width="Auto" x:Name="btnNext"                         CornerRadius="2" Margin="50,10,50,35" BorderBrush="blue" Background="#000099">
                                            <TextBlock Text="Next" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                                        </Border>
                                    </Border>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </Grid>
            <Grid x:Name="GenderPopUpGrid" Grid.Row="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Visibility="Collapsed">
                <Grid Grid.Row="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Visibility="Visible" Background="Gray" Opacity="0.4">
                </Grid>
                <Grid Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <RadioButton x:ConnectionId='5' Grid.Row="0" x:Name="rdbtnMale" Padding="40,0,0,0" Margin="75,-6,25,-8" HorizontalAlignment="Center" BorderBrush="LightGray"                           Background="White" Foreground="Black" BorderThickness="1" Content="Male" Style="{StaticResource radibButtonAge}">
                    </RadioButton>
                    <RadioButton x:ConnectionId='6' Grid.Row="1" x:Name="rdbtnfemale" Padding="40,0,0,0"  Margin="75,-8,25,-6" HorizontalAlignment="Center" BorderBrush="LightGray"                             Foreground="Black" Background="White" BorderThickness="1" Content="Female" Style="{StaticResource radibButtonAge}"></RadioButton>
                </Grid>
            </Grid>
            <Grid x:Name="ErrorPopup" Grid.RowSpan="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Visibility="Collapsed">
                <Grid Grid.Row="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Visibility="Visible" Background="Gray" Opacity="0.4">
                </Grid>
                <Grid Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Background="White" Height="130" Width="250">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="{Binding errorMessage}" TextWrapping="Wrap" HorizontalAlignment="Center" Grid.Row="0" FontSize="15" Foreground="Black" Margin="0,20,0,0"/>
                    <Button x:ConnectionId='4' x:Name="btnOK"                     Margin="0,20,0,0" VerticalAlignment="Bottom" Grid.Row="1" HorizontalAlignment="Center" Background="#000099">
                        <TextBlock Text="OK" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"/>
                    </Button>
                </Grid>
            </Grid>
            <Grid x:Name="IDProofsPopup" Grid.Row="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Visibility="Collapsed">
                <Grid Grid.Row="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Visibility="Visible" Background="Gray" Opacity="0.4">
                </Grid>
                <Grid Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Background="White" Margin="10,100,10,100">
                    <ScrollViewer>
                        <ListView x:ConnectionId='3' Grid.Row="0" x:Name="ListMenuItemsIDPRoof"                                                                                                                                                  >
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Background="Transparent" Margin="0,0,0,1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid x:Name="gridline" Grid.Row="0" Height="1"  Background="LightGray" Width="500" ></Grid>
                                        <TextBlock Margin="10" Grid.Row="1" x:Name="txtBidProofName" VerticalAlignment="Center" Text="{Binding idProofName}" FontSize="18"  Foreground="Black"/>
                                        <TextBlock x:Name="txtBidProofID" Text="{Binding idProofID}" Visibility="Collapsed" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </ScrollViewer>
                </Grid>
            </Grid>
            <Grid x:Name="AgesPopup" Grid.Row="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Visibility="Collapsed">
                <Grid Grid.Row="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Visibility="Visible" Background="Gray" Opacity="0.4">
                </Grid>
                <Grid Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Background="White" Margin="100,150,100,150">
                    <ScrollViewer>
                        <ListView x:ConnectionId='1' Grid.Row="0" x:Name="ListMenuItemsAges"                                                           >
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Background="Transparent" Margin="40,0,-20,0" HorizontalAlignment="Center">
                                        <RadioButton x:ConnectionId='2' Grid.Row="1" HorizontalAlignment="Center" Background="White"                             Content="{Binding Name}" IsChecked="{Binding Selected, Mode=TwoWay}" BorderThickness="1" GroupName="defaultAcc"  VerticalAlignment="Center" BorderBrush="LightGray"  Foreground="Black" FontSize="15" Margin="-20,0,-70,0" Style="{StaticResource radibButtonAge}" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>

