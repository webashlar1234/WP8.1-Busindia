                                                </StackPanel>
                                            </Border>
                                            <TextBlock Grid.Row="2" Grid.Column="1" FontSize="20" VerticalAlignment="Center" Foreground="Red" Margin="5,20,0,0" Text="*"/>
                                            <Border Grid.Row="3" BorderThickness="1" BorderBrush="#8B8B8B" Height="40" Margin="10,10,0,0" CornerRadius="5">
                                                <TextBox x:ConnectionId='9' x:Name="txtPhone" InputScope="Number" BorderBrush="#8B8B8B" BorderThickness="0" VerticalAlignment="Bottom" Margin="0,0,0,5" PlaceholderText="Phone" Grid.Row="0" HorizontalAlignment="Left" Width="321"                                   ></TextBox>
