                                                <StackPanel Orientation="Horizontal">
                                                    <TextBox x:Name="txtMobile" InputScope="Number" Text="{Binding Mobile}" VerticalAlignment="Bottom" Margin="0,0,0,5" BorderBrush="#8B8B8B" BorderThickness="0" PlaceholderText="Mobile" Grid.Row="0" HorizontalAlignment="Left" Width="321"></TextBox>
